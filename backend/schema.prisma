generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//////////////////////
// ENUMS
//////////////////////

enum UserRole {
  Admin
  Monitor
  Viewer
}

enum UserStatus {
  Active
  Suspended
  Invited
}

enum Platform {
  X
  Facebook
  Instagram
  LinkedIn
  Threads
  YouTube
  GoogleBusiness
}

enum PostStatus {
  Draft
  Scheduled
  Published
  Failed
  Archived
}

enum BotStatus {
  Idle
  Running
  Paused
  Error
}

enum RunStatus {
  QUEUED
  RUNNING
  SUCCESS
  FAILED
  CANCELLED
}

enum ActivityStatus {
  SUCCESS
  FAILED
  SKIPPED
}

//////////////////////
// CORE MODELS
//////////////////////

model User {
  id           String     @id @default(uuid())
  email        String     @unique
  name         String
  role         UserRole   @default(Viewer)
  status       UserStatus @default(Active)
  passwordHash String?
  lastActive   DateTime   @default(now())
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  settings     Json?

  posts        Post[]
  accounts     IntegrationAccount[]
  mediaItems   MediaItem[]
  bots         BotConfig[]
}

model IntegrationAccount {
  id           String    @id @default(uuid())
  userId       String
  platform     Platform
  handle       String?
  accessToken  String?
  refreshToken String?
  isConnected  Boolean   @default(false)
  lastSync     DateTime?

  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, platform])
}

model Post {
  id              String      @id @default(uuid())
  title           String?
  content         String
  description     String?
  platforms       Platform[]
  status          PostStatus
  scheduledFor    DateTime

  mediaUrl        String?
  mediaType       String?
  thumbnailUrl    String?
  isCarousel      Boolean     @default(false)

  generatedByAi   Boolean     @default(false)
  author          String?
  creationContext Json?

  variants        Json?
  activeVariantId String?
  autoOps         Json?
  safetySettings  Json?
  timezone        String?

  engagement      Json?

  userId          String?
  user            User?       @relation(fields: [userId], references: [id])

  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
}

model MediaItem {
  id         String   @id @default(uuid())
  name       String
  type       String
  url        String
  size       Int
  dimensions String?
  createdAt  DateTime @default(now())

  userId     String?
  user       User?    @relation(fields: [userId], references: [id])
}

//////////////////////
// BOTS & AUTOMATION
//////////////////////

model BotConfig {
  id                   String     @id @default(uuid())
  userId               String?
  type                 String     @unique
  enabled              Boolean    @default(false)
  status               BotStatus  @default(Idle)
  intervalMinutes      Int        @default(60)
  lastRun              DateTime?
  consecutiveFailures  Int        @default(0)
  isPaused             Boolean    @default(false)

  config               Json
  stats                Json

  user                 User?      @relation(fields: [userId], references: [id])

  activities           BotActivity[]
  runs                 BotRun[]
}

model BotRun {
  id         String     @id @default(uuid())
  botId      String
  status     RunStatus  @default(RUNNING)
  createdAt  DateTime   @default(now())
  finishedAt DateTime?
  error      String?

  bot        BotConfig  @relation(fields: [botId], references: [id], onDelete: Cascade)
}

model BotActivity {
  id         String         @id @default(uuid())
  botId      String
  runId      String?
  actionType String
  platform   Platform
  status     ActivityStatus
  message    String
  error      String?
  metadata   Json?

  createdAt  DateTime       @default(now())
  finishedAt DateTime?

  bot        BotConfig      @relation(fields: [botId], references: [id], onDelete: Cascade)

  @@index([botId])
  @@index([createdAt])
}

//////////////////////
// SIMULATION QUEUE
//////////////////////

model JobQueue {
  id           String   @id @default(uuid())
  queueName    String
  status       String
  scheduledFor DateTime
  payload      Json
  postId       String?

  createdAt    DateTime @default(now())
  processedAt  DateTime?

  @@index([queueName])
  @@index([status])
}
