generator client {
provider = "prisma-client-js"
}
datasource db {
provider = "postgresql"
url = env("DATABASE_URL")
}
enum Platform {
X
LinkedIn
Instagram
YouTube
Facebook
GoogleBusiness
Threads
}
enum BotType {
Creator
Engagement
Finder
Growth
}
enum GovernanceStatus {
Draft
Pending
Approved
Restricted
Rejected
}
enum MediaType {
Image
Video
}
enum UserRole {
Admin
Editor
Viewer
}
model User {
id String @id @default(uuid())
email String @unique
password String
name String
role UserRole @default(Viewer)
posts Post[]
audits AuditLog[]
createdAt DateTime @default(now())
updatedAt DateTime @updatedAt
}
model MediaAsset {
id String @id @default(uuid())
url String
thumbnailUrl String?
type MediaType
size Int
width Int
height Int
governanceStatus GovernanceStatus @default(Pending)
aiSafetyStatus String @default("unknown")
performanceScore Int @default(50)
fatigueScore Int @default(0)
tags String[]
posts Post[]
createdAt DateTime @default(now())
updatedAt DateTime @updatedAt
}
model Bot {
id String @id @default(uuid())
type BotType @unique
enabled Boolean @default(false)
configJson Json
adaptiveProfileJson Json?
lastRunAt DateTime?
posts Post[]
optimizations OptimizationEvent[]
createdAt DateTime @default(now())
updatedAt DateTime @updatedAt
}
model Post {
id String @id @default(uuid())
content String
platform Platform
status String
scheduledFor DateTime?
publishedAt DateTime?
botId String?
bot Bot? @relation(fields: [botId], references: [id])
mediaId String?
media MediaAsset? @relation(fields: [mediaId], references: [id])
authorId String?
author User? @relation(fields: [authorId], references: [id])
metricsJson Json?
createdAt DateTime @default(now())
updatedAt DateTime @updatedAt
}
model OptimizationEvent {
id String @id @default(uuid())
botId String
bot Bot @relation(fields: [botId], references: [id])
field String
oldValue String
newValue String
reason String
confidence Float
applied Boolean @default(false)
createdAt DateTime @default(now())
}
model AuditLog {
id String @id @default(uuid())
actorId String?
actor User? @relation(fields: [actorId], references: [id])
action String
entity String
entityId String
metadataJson Json?
createdAt DateTime @default(now())
