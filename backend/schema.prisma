 cat schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --------------------------------------------------------
// 1. CORE & AUTHENTICATION (Multi-tenancy)
// --------------------------------------------------------

model Tenant {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users               User[]
  platformConnections PlatformConnection[]
  campaigns           Campaign[]
  mediaAssets         MediaAsset[]
  bots                Bot[]
  decisionAudits      DecisionAudit[]
  strategyPatterns    StrategyPattern[]
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  password  String
  role      UserRole @default(VIEWER)
  tenantId  String

  tenant    Tenant   @relation(fields: [tenantId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PlatformConnection {
  id           String   @id @default(uuid())
  platform     String
  accessToken  String
  refreshToken String?
  expiresAt    DateTime?
  tenantId     String

  tenant       Tenant   @relation(fields: [tenantId], references: [id])
}

// --------------------------------------------------------
// 2. CAMPAIGNS
// --------------------------------------------------------

model Campaign {
  id           String         @id @default(uuid())
  name         String
  objective    CampaignObj    @default(AWARENESS)
  status       CampaignStatus @default(DRAFT)
  budgetConfig Json
  tenantId     String

  tenant       Tenant           @relation(fields: [tenantId], references: [id])
  metrics      CampaignMetric[]
  posts        Post[]

  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
}

model CampaignMetric {
  id          String   @id @default(uuid())
  campaignId  String
  timestamp   DateTime @default(now())

  spend       Float    @default(0.0)
  impressions Int      @default(0)
  clicks      Int      @default(0)
  conversions Int      @default(0)

  campaign    Campaign @relation(fields: [campaignId], references: [id])
}

// --------------------------------------------------------
// 3. AUTOMATION ("The Swarm")
// --------------------------------------------------------

model Bot {
  id        String   @id @default(uuid())
  name      String
  type      BotType
  enabled   Boolean  @default(false)
  config    Json
  state     Json
  tenantId  String

  tenant    Tenant   @relation(fields: [tenantId], references: [id])
  logs      BotLog[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model BotLog {
  id        String   @id @default(uuid())
  botId     String
  level     String
  message   String
  timestamp DateTime @default(now())

  bot       Bot      @relation(fields: [botId], references: [id])
}

// --------------------------------------------------------
// 4. GOVERNANCE & AI (The Brain)
// --------------------------------------------------------

model DecisionAudit {
  id             String         @id @default(uuid())
  source         DecisionSource
  reasoning      String
  snapshot       Json
  approvalStatus ApprovalStatus @default(PENDING)
  tenantId       String

  tenant         Tenant         @relation(fields: [tenantId], references: [id])
  createdAt      DateTime       @default(now())
}

model StrategyPattern {
  id               String   @id @default(uuid())
  patternSignature String
  confidenceScore  Float
  successCount     Int      @default(0)
  tenantId         String

  tenant           Tenant   @relation(fields: [tenantId], references: [id])
  learningEvents   LearningEvent[]
}

model LearningEvent {
  id                String   @id @default(uuid())
  strategyPatternId String
  context           Json
  action            String
  outcomeScore      Float
  createdAt         DateTime @default(now())

  strategyPattern   StrategyPattern @relation(fields: [strategyPatternId], references: [id])
}

// --------------------------------------------------------
// 5. CONTENT & MEDIA
// --------------------------------------------------------

model MediaAsset {
  id        String   @id @default(uuid())
  s3Key     String
  url       String
  hash      String?
  metadata  Json?
  tenantId  String

  tenant    Tenant   @relation(fields: [tenantId], references: [id])
  posts     Post[]

  createdAt DateTime @default(now())
}

model Post {
  id            String      @id @default(uuid())
  content       String
  variants      Json?
  scheduledFor  DateTime?
  status        PostStatus  @default(DRAFT)
  approvalChain Json?

  campaignId    String?
  mediaAssetId  String?

  campaign      Campaign?   @relation(fields: [campaignId], references: [id])
  mediaAsset    MediaAsset? @relation(fields: [mediaAssetId], references: [id])

  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

// --------------------------------------------------------
// ENUMS
// --------------------------------------------------------

enum UserRole {
  ADMIN
  OPERATOR
  VIEWER
}

enum CampaignObj {
  AWARENESS
  CONVERSION
  ENGAGEMENT
}

enum CampaignStatus {
  DRAFT
  ACTIVE
  PAUSED
  COMPLETED
}

enum BotType {
  CREATOR
  ENGAGEMENT
  FINDER
  GROWTH
}

enum DecisionSource {
  RULE_ENGINE
  AI_MODEL
}

enum ApprovalStatus {
  PENDING
  APPROVED
  REJECTED
}

enum PostStatus {
  DRAFT
  SCHEDULED
  PUBLISHED
  FAILED
}
